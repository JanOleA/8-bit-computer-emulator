;! name: RUN
;! entry: run
;! deps: parse_number
;! abi: all
;! bss: auto
;! align: 4
;! callable: yes

; bss + 0 : saved call stub operand

; --- RUN: call an absolute address via OS call stub ---
; Usage: RUN <addr>

run:
  ; argc must be >= 1
  LDA .argv_base
  CPI 1
  JPC rn_have_arg
  RET

rn_have_arg:
  ; parse argv[1] into .res1
  ; save current CALL_STUB operand (19997)
  LDA 19997
  STA .bss

  LDA .argv_base + 1
  PHA
  JSR @parse_number
  STA 19997

  ; call trampoline at 19996
  JSR #19996

  ; restore previous operand
  LDA .bss
  STA 19997
  RET
