;! name: TESTGM
;! entry: test_getmnen
;! deps: display_number, get_mnemonic, newline
;! abi: os
;! bss: none
;! align: 20


test_getmnen:
  LDI .argv_base
  PHA
  LAS
  CPI 1
  JPZ run_test
  RET
  
run_test:
  LDI .argv_base      ; get first argument and store pointer to the string in .arg1
  ADI 1
  PHA
  LAS
  STA .arg1
  JSR @get_mnemonic
  LDA .res1
  STA .arg1
  JSR @display_number
  JSR @newline
  RET