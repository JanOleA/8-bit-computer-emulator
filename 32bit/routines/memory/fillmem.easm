;! name: FILLMEM
;! entry: start
;! deps:
;! abi: all
;! bss: auto
;! align: 4
;! callable: yes

; Fill memory range with a value.
; Inputs (OS ABI):
;   .bss + 0 = dst
;   .bss + 1 = len
;   .bss + 2 = value

start:
  ; require at least 3 args
  LDA .argv_base
  CPI 3
  JPZ cl_go
  RET

cl_go:
  LDA .argv_base + 1
  PHA
  JSR @parse_number
  STA .bss

  LDA .argv_base + 2
  PHA
  JSR @parse_number
  STA .bss + 1

  LDA .argv_base + 3
  PHA
  JSR @parse_number
  STA .bss + 2

fill:
  ; if len == 0: return
  LDA .bss + 1
  CPI 0
  JPZ fl_ret
  ; ptr = dst
  LDA .bss
  STA .work2
  ; cnt = len
  LDA .bss + 1
  STA .work4
fl_loop:
  LDA .work4
  CPI 0
  JPZ fl_ret
  ; *ptr = value
  LDA .work2
  PHA
  LDA .bss + 2
  SAS
  ; advance
  LDA .work2
  ADI 1
  STA .work2
  LDA .work4
  SUI 1
  STA .work4
  JMP fl_loop

fl_ret:
  RET

